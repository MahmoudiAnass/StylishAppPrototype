<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F3F3F3" /> <!-- Background color -->
            <corners android:radius="8dp" /> <!-- Optional: Rounded corners -->
        </shape>
    </item>

    <!-- Border -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Transparent to show the background -->
            <stroke
                android:width="2dp"
                android:color="#A8A8A9" /> <!-- Border color -->
            <corners android:radius="10dp" /> <!-- Optional: Rounded corners -->
        </shape>
    </item>
</layer-list>